# Paperless-ngx Configuration
PAPERLESS_URL=http://192.168.0.45:8000
PAPERLESS_TOKEN=your_api_token_here

# Folder Monitoring
WATCH_FOLDER=C:\path\to\your\scan\folder
FILE_PATTERN=hp_envy_to_paperless_*.pdf

# Logging
LOG_LEVEL=INFO

# Optional: File naming
TIMESTAMP_FORMAT=%Y%m%d_%H%M%S

# File completion detection
FILE_STABLE_TIME=3
FILE_TIMEOUT=30

# File processing behavior
# AUTO_RENAME: 'smart' (default) - only rename if no timestamp in filename
#              'always' - always rename files
#              'never' - never rename files
AUTO_RENAME=smart

# Upload settings
UPLOAD_TIMEOUT=30
UPLOAD_RETRY_ATTEMPTS=3
UPLOAD_RETRY_DELAY=2.0

# Rate limiting (seconds between uploads)
RATE_LIMIT_DELAY=0.5

# File cleanup
# Set to 'true' to delete files after successful upload
DELETE_AFTER_UPLOAD=false

# Advanced settings
FILE_READ_CHUNK_SIZE=1024